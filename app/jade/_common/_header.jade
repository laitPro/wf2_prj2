header.main-header
	.contacts
		.container.clearfix
			ul.socials
				- var socials = ['fb','vk','tw']
				each item in socials
					li.socials-item
						a(href="#" class="socials-link-#{item}").socials-link
			.contacts-info				
				.addres 
					i.icon.icon-addres
					span.addres-text ул. Маяковская 6, офис 17
				a(href="tel:+79211231213").phone
					i.icon.icon-phone
					span.phone-text +7 (921) 123-12-13
	.container.clearfix.block-find
		a(href="index.html").logo
			img(src="imgs/content/logo.png", alt="logo").log-img
			h1.logo-text Cooltech
		.search
			input(type="text", name="find" placeholder="Что будем искать").search-input
			button(type="submit").search-btn Найти
		ul.user-nav
			- var usernav = {'map':'Карта проезда','history':'История заказов','box':'Корзина'}
			each item,i in usernav
				li.user-nav-item
					if i=='map'
						a(href="#" class="user-nav-link").user-nav-link-active=item
					else
						a(href="#" class="user-nav-link")=item
	.nav					
		.container.clearfix
			ul.main-nav
				-var nav = ['Планшеты','Мобильные телефоны','Mp3 плееры','Персональыне компьютеры','Ноутбуки','Аксуссуары','Бытовая техника']
				each item,i in nav
					li.main-nav-item
						if i == 1
							a(href="index.html" class="main-nav-link").main-nav-link-active=item
						else
							a(href="#" class="main-nav-link")=item	



							
					
		

					